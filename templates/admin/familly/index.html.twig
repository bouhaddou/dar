{% extends 'admin/base.html.twig' %}

{% block title %}ألاسر{% endblock %}

{% block body %}
 
   <div class="content-header" >
    <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">إدارة الأسرة</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item "><a href="{{ path('admin_dashboard') }}">لوحة القيادة
                  </a></li>
              <li class="breadcrumb-item active">أسرة</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
  
    <h1 class="text-center mt-3 mb-2">قائمة الاسر</h1>
    <a class="float-right btn btn-success mb-2" href="{{ path('familly_new') }}"><i class="fas fa-plus"></i> اضافة اسرة</a>
    <table class="table table-hover" dir="rtl">
        <thead>
            <tr>
                <th>الرقم</th>
                <th class="text-center">الاسم الكامل</th>
                <th class="text-center">تاريخ التسجيل</th>
                <th class="text-center">العنوان</th>
                <th class="text-center">الهاتف</th>
                <th class="text-center">عدد الايتام</th>
                <th class="text-center">الإجراءات</th>
            </tr>
        </thead>
        <tbody>
        {% for familly in famillies %}
            <tr>
                <td>{{ familly.id }}</td>
                <td class="text-center">{{ familly.nom }}</td>
                <td class="text-center">{{ familly.setAt ? familly.setAt|date('Y-m-d') : '' }}</td>
                <td class="text-center">{{ familly.adresse|slice(0,50) }}</td>
                <td class="text-center">{{ familly.phone }}</td>
                <td class="text-center"><span class="badge badge-primary">{{ familly.orphelin|length }}</span></td>
                <td class="text-center">
                  <div class="btn-group btn-group-sm">
                    <a class=" btn btn-info" href="{{ path('familly_show', {'id': familly.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class=" btn btn-success"  href="{{ path('familly_edit', {'id': familly.id}) }}"><i class="fas fa-edit"></i></a>
                  </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    </div>
    
{% endblock %}
